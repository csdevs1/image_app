<%= form_for @product, :html => {:multipart => true} do |f| %>
    <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
    </p>

    <p>
    <%= f.label :info %>
    <%= f.text_field :info %>
    </p>

    <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
    </p>

    <p>
    <%= f.label :price %>
    <%= f.text_field :price %>
    </p>

    <p><%= f.submit "Submit" %></p>

    <%= f.fields_for :images do |builder| %>

        <% if builder.object.new_record? %>
        <p>
            <%= builder.label :image, "Image File" %>
            <%= builder.file_field :image %>
        </p>

        <% end %>

    <% end %>
<% end %>